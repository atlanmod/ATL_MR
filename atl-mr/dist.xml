<?eclipse.ant.import ?>
<project name="atl-mr" default="dist">    
	<property name="bin" location="bin" />
	<property name="dist" location="dist" />
	<property name="dist.libs" location="${dist}/libs" />

	<property name="jar.file" location="${dist}/${ant.project.name}.jar" />

	<target name="dist">
		<jar destfile="${jar.file}" basedir="${bin}" />
		<copy todir="${dist.libs}" verbose="yes" flatten="yes" failonerror="no">    
			<path>
				<path refid="Plug-in Dependencies.libraryclasspath" />
			</path>
		</copy>
	</target>
	<target name="clean-dist">
		<delete>
			<fileset dir="${dist}" includes="**/*"/>
			<dirset dir="${dist}" includes="**/*"/>
		</delete>
	</target>
</project>